<script type="text/html" id="UsersAdminViewTmpl">
<form method="post" data-bind="submit: submit, event: {reset:reset}" class="form-horizontal" role="form">
@Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10" data-bind="text:email"/>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>
        <div class="col-md-10">
            <input type="text" data-bind="value:fullname" class="form-control" autofocus/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Lockout</label>
        <div class="col-md-10">
            <input type="checkbox" data-bind="checked:lockout" @*class="form-control"*@ />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Roles</label>
        <div class="row">
            <ul class="list-unstyled" data-bind="foreach: roles">
                <li class="col-sm-3">
                    <input type="checkbox" name="roles" data-bind="checked: selected"/>
                    <span data-bind="text: name"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Dealers</label>
        <input type="text" data-bind="value:dealerName, typeahead: dealerTypeaheadHelper" class="form-control" autocomplete="off" />
        <div class="row">
            <ul class="list-unstyled" data-bind="foreach: dealers">
                <li class="col-sm-3">                    
                    <span data-bind="text: Name"></span>(<span data-bind="text: DealerID"></span>)
                    <a href="#" data-bind="click:$root.del">Del</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
            <input type="reset" class="btn btn-default" value="Reset" />
        </div>
    </div>
</form>
</script>